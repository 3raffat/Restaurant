@model Restaurant.ViewModels.MasterOfferModel

@{
    ViewData["Title"] = "Edit";
}


<div class="pagetitle">
    <h1>Menu</h1>
    <hr />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterOffer">Manage Master Offer</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterOfferTitle" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterOfferTitle" class="form-control" />
                                    <span asp-validation-for="MasterOfferTitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterOfferBreef" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterOfferBreef" class="form-control" />
                                    <span asp-validation-for="MasterOfferBreef" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterOfferDesc" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterOfferDesc" class="form-control" />
                                    <span asp-validation-for="MasterOfferDesc" class="text-danger"></span>
                                </div>
                            </div>
                        </div>   <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterOfferBookNow" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterOfferBookNow" class="form-control" />
                                    <span asp-validation-for="MasterOfferBookNow" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <input type="hidden" asp-for="MasterOfferImageUrl" />
                           @*  <img src="~/Admin/Images/Offers/@Model.MasterOfferImageUrl" style="max-width:35px" /> *@
                        </div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="File" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="File" class="form-control" />
                                    <span asp-validation-for="File" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-end mt-3" style="direction:rtl;">
                            <input type="submit" value="Edit" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-dark">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
