@model Restaurant.ViewModels.MasterServicesModel

@{
    ViewData["Title"] = "Edit";
}


<div class="pagetitle">
    <h1>Menu</h1>
    <hr />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterServices">Manage Master Services</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterServicesTitle" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterServicesTitle" class="form-control" />
                                    <span asp-validation-for="MasterServicesTitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterServicesDesc" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterServicesDesc" class="form-control" />
                                    <span asp-validation-for="MasterServicesDesc" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        @* <div class="form-group"> *@
                        @*     <input type="hidden" asp-for="MasterServicesImage" /> *@
                        @*     @*  <img src="~/Admin/Images/Offers/@Model.MasterOfferImageUrl" style="max-width:35px" /> *@ 
                        @* </div> *@
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterServicesImage" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterServicesImage" class="form-control" />
                                    <span asp-validation-for="MasterServicesImage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-end mt-3" style="direction:rtl;">
                            <input type="submit" value="Edit" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-dark">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
