@model Restaurant.ViewModels.MasterItemMenuModel

@{
    ViewData["Title"] = "Create";
}


<div class="pagetitle">
    <h1>Menu</h1>
    <hr />
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterItemMenu">Master Item Menu</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="card-body">
                    <br />
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterItemMenuTitle" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterItemMenuTitle" class="form-control" />
                                    <span asp-validation-for="MasterItemMenuTitle" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
    

                        <div class="row">
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <label asp-for="MasterItemMenuDesc" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8">
                                    <input asp-for="MasterItemMenuDesc" class="form-control" />
                                    <span asp-validation-for="MasterItemMenuDesc" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 d-flex align-items-center mb-3">
                                    <label asp-for="MasterCategoryMenuId" class="col-sm-4 col-form-label bold"></label>
                                    <div class="col-sm-8">
                                        <select asp-for="MasterCategoryMenuId" class="form-select" asp-items="@(new SelectList( ViewBag.CategoryMenu ,"MasterCategoryMenuId","MasterCategoryMenuName"))"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 d-flex align-items-center mb-3">
                                    <label asp-for="MasterItemMenuPrice" class="col-sm-4 col-form-label bold"></label>
                                    <div class="col-sm-8">
                                        <input asp-for="MasterItemMenuPrice" class="form-control" />
                                        <span asp-validation-for="MasterItemMenuPrice" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-md-6 d-flex align-items-center mb-3">
                                        <label asp-for="MasterItemMenuImageUrl" class="col-sm-4 col-form-label bold"></label>
                                        <div class="col-sm-8">
                                            <input asp-for="File" class="form-control" />
                                            <span asp-validation-for="File" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group text-end mt-3" style="direction:rtl;">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-dark">Back to List</a>
                                </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
