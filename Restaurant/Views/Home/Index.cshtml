@model Restaurant.ViewModels.HomeModel

@{
    ViewData["Title"] = "Index";
}
<div class="slider-area">
    <div class="slider-active owl-dot-style owl-carousel">
        @foreach (var item in Model.MasterSlider)
        {
            <div class="single-slider bg-img height-100vh d-flex align-items-center justify-content-center" style="background-image:url(/Admin/Images/Slider/@item.MasterSliderUrl);">
                <div class="slider-content pt-100">
                    <div class="slider-content-wrap slider-animated-1">
                        @Html.Raw(item.MasterSliderTitle)
                        @Html.Raw(item.MasterSliderBreef)
                        <p>@item.MasterSliderDesc</p>
                        <div class="slider-btn mt-20">
                            <a class="animated" href="#">read more</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@* ///////////  *@

<div class="about-area ptb-95">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class="col-lg-6">
                <div class="about-content pr-30">
                    <h2>@Model.SystemSetting?.SystemSettingWelcomeNoteTitle </h2>
                    <h3>@Model.SystemSetting.SystemSettingWelcomeNoteBreef </h3>
                    <div class="about-peragraph">
                        <p>@Model.SystemSetting?.SystemSettingWelcomeNoteDesc</p>
                        <p>@Model.SystemSetting?.SystemSettingWelcomeNoteDesc</p>
                        <div class="default-btn-style mt-35">
                            <a href="#">read more</a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-6">
                <div class="about-img">
                    <img alt="" src="~/Admin/Images/SystemSetting/@Model.SystemSetting?.SystemSettingWelcomeNoteImageUrl">
                </div>
            </div>
        </div>
    </div>
</div>
@* ///////////  *@
