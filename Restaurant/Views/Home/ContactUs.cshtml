@model Restaurant.ViewModels.HomeModel

@{
    ViewData["Title"] = "ContactUs";
    Layout = "_Layout1";
}

<div class="breadcrumb-area bg-img ptb-80" style="background-image:url(/assets/img/banner/breath.jpg);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h3>Contact us</h3>
            <ul>
                <li>
                    <a asp-action="index" asp-controller="Home">Home</a>
                </li>
                <li class="active">Contact us</li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-area pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-message-wrapper">
                    <h4 class="contact-title mb-25">Leave Us a Message</h4>
                    <div class="contact-message">
                        <form asp-action="Create" >
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactUs.TransactionContactUsFullName" placeholder="Full Name" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactUs.TransactionContactUsEmail"  placeholder="Email Address" type="email">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style mb-20">
                                        <input asp-for="TransactionContactUs.TransactionContactUsSubject"  placeholder="Subject" type="text">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="contact-form-style">
                                        <textarea asp-for="TransactionContactUs.TransactionContactUsMessage" placeholder="Message"></textarea>
                                        <button class="submit btn-style " type="submit">SEND MESSAGE</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-info-area">
                    <h4 class="contact-title mb-18">Contact Us</h4>
                    <p>Lorem ipsum dolor sit amet, conse ncteturll adipisicing elit, sed do eiusmod </p>
                    <div class="contact-info-wrap">
                        <div class="single-contact-info mb-40">
                            <div class="contact-info-icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <div class="contact-info-content">
                                <h4>Location :</h4>
                                <p>@Model.SystemSetting.contactUsLocation</p>
                            </div>
                        </div>
                        <div class="single-contact-info mb-35">
                            <div class="contact-info-icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="contact-info-content">
                                <h4>phone :</h4>
                                <p>@Model.SystemSetting.contactUsPhone</p>
                                <p>@Model.SystemSetting.contactUsPhone</p>
                            </div>
                        </div>
                        <div class="single-contact-info">
                            <div class="contact-info-icon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <div class="contact-info-content">
                                <h4>mail :</h4>
                               
                                <p><a href="#">@Model.SystemSetting.contactUsEmail</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="map-area pt-100">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d54192.41863998542!2d35.97249515000001!3d31.905886449999993!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151b5ec3a03b5e83%3A0xc24257ba976ed8e6!2z2YXZhti32YLYqSDYp9mE2YLZiNmK2LPZhdip2Iwg2LnZhdmR2KfZhg!5e0!3m2!1sar!2sjo!4v1740470283434!5m2!1sar!2sjo" width="100%" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</div>